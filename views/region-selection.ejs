<!DOCTYPE html>
<html>
<head>
    <title>Discover Vietnam</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <% include nav.ejs %>
    <div class="main-content">
        <h1>Discover Vietnam</h1>
        <div class="grid-container">
            <% regions.forEach(region => { %>
                <div class="grid-item">
                    <img src="<%= region.img %>" alt="<%= region.name %>" style="width:100%;height:200px; object-fit:cover;">
                    <h3><%= region.name %></h3>
                    <a href="/destinations/<%= region.key %>">Explore</a>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
